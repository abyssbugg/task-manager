{
	"name": "@abyssbugg/task-manager",
	"version": "1.0.3",
	"description": "Model Context Protocol server for Task Management",
	"author": "abyssbugg",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"task-manager": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "bun run index.ts",
		"build": "bun run tsc && chmod +x dist/*.js",
		"prepare": "bun run build",
		"watch": "bun run tsc --watch",
		"typecheck": "bun run tsc -noEmit",
		"lint": "bunx biome check .",
		"format": "bunx biome format ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/abyssbugg/task-manager.git"
	},
	"keywords": [
		"taskmanager",
		"mcp",
		"claude"
	],
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "0.5.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/node": "^20.11.0",
		"typescript": "^5.3.3"
	}
}
